<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Master_Creator"
        tools:targetApi="31">
        <activity
            android:name=".ImageGenerationActivity"
            android:exported="true"
            android:label="@string/title_activity_image_generation"
            android:theme="@style/Theme.Master_Creator" />
        <activity
            android:name=".ChoixDimage"
            android:exported="true"
            android:label="@string/title_activity_choix_dimage"
            android:theme="@style/Theme.Master_Creator" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Master_Creator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DiceSelectionActivity"
            android:exported="true" />
        <activity
            android:name=".CharacterActivity"
            android:exported="true" />
        <activity
            android:name=".MusiqueMenu"
            android:exported="true" />

        <service android:name=".MusicService" />
    </application>

</manifest>